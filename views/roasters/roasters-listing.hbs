<head>
    <link rel="stylesheet" href="/stylesheets/listing-view.css" />
</head>

<div class="container">
  <div class="row">
    <div class="col-lg-3 col-sm">
      <div class="sticky-items">
      <form action='/roaster-search' method='GET' class="search-listing-form">
        <div class="form-group">
            <label for="roasterNameInput">Roaster Name</label>
            <input type="text" name="name" class="form-control" id="roasterNameInput">
        </div>
        <div class="form-group">
            <label for="countryInput">Country</label>
            <input type="text" name="country" class="form-control" id="countryInput">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
        </form>
        <div id="img-coffee-search"></div>
    </div>
    </div>
    <div class="col-lg-9 col-sm">
      <div class="container">
        <div class="row gy-5">
          {{#each roastersList}}
          <div class="col-sm col-lg-4">
            {{> roastercard}}
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
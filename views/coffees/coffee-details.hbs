<head>
    <link rel="stylesheet" href="/stylesheets/details-view.css" />
</head>

<div>
<div class="container">
  <div class="row align-items-end">
    <div class="col-lg-4 col-sm">
           <h1>{{oneCoffee.name}}</h1>
      <form action='/coffees/detail/{{oneCoffee._id}}/add-favorite' method='POST'>
        <button type='submit' class="favorite-btn"><span class="favorite-button-icon fa fa-heart-o fa-lg"> Add to Favorites</span></button>
      </form>

    {{!-- error message display: --}} 

      {{#if errorMessage}}
        <div class="error-message">{{ errorMessage }}</div>
      {{/if}}

      <img src="{{oneCoffee.image}}" alt="coffee image" width="300px">
    </div>
    <div class="col-lg-8 col-sm">
        <p class="text-capitalize"><strong>Process: </strong>{{oneCoffee.process}}</p>
        <p><strong>Origin Country: </strong> {{oneCoffee.originCountry}}</p>
        <p class="text-capitalize"><strong>Variety: </strong>{{oneCoffee.variety}}</p>
        <p class="text-capitalize"><strong>Roast Type: </strong>{{oneCoffee.roastType}}</p>
        <p><strong>Flavor: </strong>{{oneCoffee.flavor}}</p>
        <p><strong>Roaster: <a href="/roasters/detail/{{oneCoffee.roaster._id}}">{{oneCoffee.roaster.name}}</a></p></strong>
    </div>
  </div>
</div>
<div class="btn-row">
  <a href='/coffees/edit-coffee/{{oneCoffee._id}}' class="btn">Edit Coffee</a><br>
  <form action='/coffees/detail/{{oneCoffee._id}}/delete' method='POST'>
    <button type='submit' class="btn">Delete</button>
  </form>
  <a href='javascript:history.back()' class="btn">Back</a>
</div>
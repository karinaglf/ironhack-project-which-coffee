<h2>Coffee Search Result</h2>

<div class="container">
  <div class="row">
    <div class="col-lg-3 col-sm">
      <form action='/coffee-search' method='GET'>
        <div class="form-group">
            <label for="coffeeNameInput">Coffee Name</label>
            <input type="text" name="name" class="form-control" id="coffeeNameInput">
        </div>
        <div class="form-group">
            <label for="originCountryInput">Origin Country</label>
            <input type="text" name="originCountry" class="form-control" id="originCountryInput">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
    <div class="col-lg-9 col-sm">
    {{#each coffeesList}}
        <div class="coffees-list">
        <h3>{{this.name}}</h3>
        <a href="/coffees/detail/{{this._id}}">See Details</a>
        </div>
    {{/each}}
    </div>
  </div>
</div>